<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/title_style"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:text="無尾熊館"
        app:layout_constraintLeft_toRightOf="@id/iv_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_pic"/>

    <TextView
        android:id="@+id/tv_info"
        style="@style/text_content_style"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:text="無尾熊是在南半球澳洲大陸上著名的有袋目動物。無尾熊屬於夜行性動物，白天大部分的時間都在睡覺和休息，可達17-20小時。 牠們最愛吃新鮮桉(尤加利)樹的嫩枝葉。成年的雄性還會用胸腺的分泌物在樹幹上做標記，以留下氣味"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>


    <TextView
        android:id="@+id/tv_memo"
        style="@style/text_content_style"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:text="@string/no_memo_info"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>